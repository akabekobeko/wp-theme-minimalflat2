@import "CommonColor.styl"
@import "CommonSize.styl"

// ページ全体
html, body {
  width size_fill
  height size_fill
  margin 0
  padding 0
  letter-spacing .08em
  background-color color_page
}

// 回り込み解除
.clarfix {
  clear both
}

// サイト全体
.page {
  width size_fill
  height size_fill
}

// サイトのヘッダー
.page__header {
  width size_fill
}

// コンテンツ部分
.page > .content {
  max-width size_content_2column_width
  margin auto

  > .main {
    float left
    box-sizing border-box
    padding 0 1em
    width size_content_2column_main_width
  }

  > .main-single {
      box-sizing border-box
      margin auto
      padding 0 1em
      width size_fill
      max-width size_content_1column_main_width
  }

  > .sidebar {
    float right
    width size_content_2column_sidebar_width

    > .widgt {
      padding 0 .5em
    }
  }
}

// サイトのフッター
.page__footer {
  width size_fill
}

// シングル カラム
@media screen and ( max-width: size_content_2column_width ) {
  .page > .content {
    > .main {
      float none
      margin auto
      width size_fill
      max-width size_content_1column_main_width
    }

    > .sidebar {
      float none
      width size_fill
      text-align center

      > .widget {
        display inline-block
        box-sizing border-box
        margin auto
        padding 0 1em 1em
        width size_fill
        vertical-align top

        .widgettitle {
          margin .5em 0
        }
      }
    } 
  }
}
