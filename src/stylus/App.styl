/**
 * App
 */

size_fill                          = 100%
size_content_2column_width         = 1200px
size_content_2column_main_width    = 900px
size_content_2column_sidebar_width = 300px

color_page = #fbfcfa

html, body {
  width size_fill
  height size_fill
  margin 0
  padding 0
  letter-spacing .08em
  background-color color_page
}

.clarfix {
  clear both
}

.page {
  width size_fill
  height size_fill
}

.page > .header {
  width size_fill
}

.page > .content {
  max-width size_content_2column_width
  margin auto

  > .main {
    float left
    box-sizing border-box
    padding 0 1em
    width size_content_2column_main_width
  }

  > .main-single {
      box-sizing border-box
      margin auto
      padding 0 1em
      width size_fill
      max-width size_content_2column_main_width
  }

  > .sidebar {
    float right
    width size_content_2column_sidebar_width

    > .widgt {
      padding 0 .5em
    }
  }
}

.page > .footer {
  width size_fill
}

@media screen and ( max-width: size_content_2column_width ) {
  .page > .content {
    > .main {
      float none
      margin auto
      width size_fill
      max-width size_content_2column_main_width
    }

    > .sidebar {
      float none
      width size_fill

      > .widget {
        display inline-block
        margin auto
        padding 0 1em 1em 1em
        vertical-align top
      }
    } 
  }
}
