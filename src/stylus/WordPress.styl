.aligncenter {
  text-align center
}

.alignleft {
  text-align left
}

.alignright {
  text-align right
}

.page > .content [class^="post-"], .page > .content [class*=" post-"] {
  .wp-caption {
    padding 1em
    text-align center
    box-sizing border-box
    max-width 100%

    > .wp-caption-text {
      margin 0
      padding 0
    }

    img {
      max-width 100%
    }
  }
}

.sticky {
  font-weight normal
}

.gallery-caption {
  font-weight normal
}
