@import "CommonSize.styl"

.aligncenter {
  text-align center
}

.alignleft {
  float left
}

.alignright {
  float right
}

.sticky {
  font-weight normal
}

.gallery-caption {
  font-weight normal
}

.wp-caption {
  box-sizing border-box
  margin auto
  padding 1em
  max-width size_fill

  > .wp-caption-text {
    margin auto
    padding 0
    width size_fill
    text-align center
  }
}

.page__content__post p.wp-caption-text {
  text-align center
}

// Plugin
.syntaxhighlighter {
  padding .5em 0
}

img#wpstats {
  display none
}
