/**
 * WordPress
 */

.aligncenter {
  text-align center
}

.alignleft {
  text-align left
}

.alignright {
  text-align right
}

.sticky {
  font-weight normal
}

.gallery-caption {
  font-weight normal
}

.wp-caption {
  padding 1em
  text-align center
  box-sizing border-box
  max-width 100%

  > .wp-caption-text {
    margin 0
    padding 0
  }

  img {
    max-width 100%
  }
}

/**
 * WordPress - Plugin
 */

.syntaxhighlighter {
  padding .5em 0
}

img#wpstats {
  display none
}
